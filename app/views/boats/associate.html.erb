<h2>Associate membership with boat</h2>
<%= form_for :boat, url: save_association_boat_path do |f| %>
<div class="form-row">
  <p><b>Name: </b><%= @boat.Name %>&nbsp;&nbsp;<b>Mfg_Size: </b><%= @boat.Mfg_Size %></p>
</div>
<div class="form-row">
  <label for="Memberships" class="col-form-label pt-0">Memberships:</label>
  <div class="col-sm-2">
    <%= f.collection_select(:memberships, @memberships, :id, :MailingName, class: "form-control") %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-3 pt-3">
    <button type="submit" class="btn btn-primary">Associate</button> | <%= link_to 'Back', back_link(1) %>
  </div>
</div>
<% end %>
