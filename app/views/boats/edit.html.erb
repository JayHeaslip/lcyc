<%= form_for @boat do |f| %>
<% if @boat.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(@boat.errors.count, "error") %>
    prohibited this boat from being saved:</h3>
  
  <ul>
    <% @boat.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="boat">
  <div class="form-row">
    <div class="form-group col-sm-3">
      <span class="has-float-label">
	<%= f.text_field :Mfg_Size, id: :Mfg_Size, class: "form-control", placeholder: " " %>
	<label for="Mfg_Size">Mfg/Size</label>
      </span>
    </div>
    <div class="form-group row">
      <label for="Type" class="col-form-label pt-0 col-sm-4">Type:</label>
      <div class="col-sm-2">
	<%= f.select :Type, %w{Sail Power}, {include_blank: true} %>
      </div>
    </div>
    <div class="form-group col-sm-3">
      <span class="has-float-label">
	<%= f.text_field :Name, id: :Name, class: "form-control", placeholder: " " %>
	<label for="Name">Name</label>
      </span>
    </div>
    <div class="form-group col-sm-1">
      <span class="has-float-label">
      <%= f.text_field :Length, id: :Length, class: "form-control", placeholder: " " %>
      <label for="Length">Length</label>
      </span>
    </div>
    <div class="form-group col-sm-1 mb-1">
      <span class="has-float-label">
	<%= f.text_field :Draft, id: :Draft, class: "form-control", placeholder: " " %>
	<label  for="Draft">Draft</label>
      </span>
    </div>
    <div class="form-group col-sm-1">
      <span class="has-float-label">
      <%= f.text_field :Class, id: :Class, class: "form-control", placeholder: " " %>
      <label for="Class">Class</label>
      </span>
    </div>
  </div>
  <div class="form-row mb-4">
    <div class="form-group col-sm-1">
      <span class="has-float-label">
      <%= f.text_field :PHRF, id: :Class, class: "form-control", placeholder: " " %>
      <label for="PHRF">PHRF</label>
      </span>
    </div>
    <div class="form-group col-sm-1">
      <span class="has-float-label">
      <%= f.text_field :sail_num, id: :sail_num, class: "form-control", placeholder: " " %>
      <label for="sail_num">Sail#</label>
      </span>
    </div>
    <div class="form-group row">
      <label for="Type" class="col-form-label pt-0 col-sm-4">Location:</label>
      <div class="col-sm-2">
	<%= f.select :location, ['Mooring', 'Parking Lot'], {include_blank: true} %>
      </div>
    </div>
    <div class="form-group col-sm-1">
      <span class="has-float-label">
      <%= f.text_field :mooring_num, id: :mooring_num, class: "form-control", placeholder: " " %>
      <label for="sail_num">Mooring#</label>
      </span>
    </div>
  </div>
  <hr>
</div>
<div class="form-group row mt-3">
  <div class="col-sm-3">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</div>
<% end %>
