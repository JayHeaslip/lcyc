<div>
  <h3>Boat</h3>
  <hr>
  <table class="table table-sm">
    <tbody>
      <tr>
	<td><b>Name:</b></td><td><%= @boat.Name %></td>
      </tr>
      <tr>
	<td><b>Mfg/Size:</b></td><td><%= @boat.Mfg_Size %></td>
      </tr>
      <tr>
	<td><b>Type:</b></td><td><%= @boat.Type %></td>
      </tr> 
     <tr>
	<td><b>Length:</b></td><td><%= @boat.Length %></td>
      </tr>
      <tr>
	<td><b>Draft:</b></td><td><%= @boat.Draft %></td>
      </tr>
      <tr>
	<td><b>Mooring#:</b></td><td><%= @boat.mooring_id %></td>
      </tr>
      <tr>
	<td><b>Sail#:</b></td><td><%= @boat.sail_num %></td>
      </tr>
    </tbody>
  </table>
  <p>
    <%= link_to 'Edit Boat', edit_boat_path(@boat) %>
  </p>
  <% if not @boat.memberships.empty? %>
  <h3>Memberships</h3>
  <hr>
  <table class="table table-sm">
    <thead class="thead-light">
      <tr>
	<th>Last Name</th>
	<th>Mailing Name</th>
      </tr>
    </thead>
    <tbody>
      <% for membership in @boat.memberships %>
      <tr>
	<td><%= link_to membership.LastName, membership %></td>
	<td><%= membership.MailingName %></td>
	<td class="list-actions">
          <%= link_to "Remove Association", rmboat_membership_boat_path(membership, @boat), data: {turbo_confirm: "Are you sure?", turbo_method: :delete } %>
	</td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <p>
    <%= link_to 'Associate with a membership', associate_boat_path(@boat) %>
  </p>
</div>
