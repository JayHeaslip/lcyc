<% if @committee == "All" %>
  <h2 class="mt-3 mb-3">Committee listing for all members</h2>
  <div>
    <%= form_with url: download_all_committees_path(@committee), method: :get, data: { turbo: false} do |f| %>
      <%= f.submit "Download as a spreadsheet", class: "btn btn-primary" %> | <%= link_to 'Back', select_committees_path %>
    <% end %>
  </div>
<% else %>
  <h2 class="mt-3 mb-3"><%= @committee.Name %> Committee</h2>
  <div>
    <%= form_with url: download_committee_path(@committee), method: :get, data: { turbo: false} do |f| %>
      <%= f.submit "Download as a spreadsheet", class: "btn btn-primary" %> | <%= link_to 'Back', select_committees_path %>
    <% end %>
  </div>
<% end %>
<%= render 'committee_list' %>
