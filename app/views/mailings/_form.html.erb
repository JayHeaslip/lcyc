<% if @mailing.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(@mailing.errors.count, "error") %>
    prohibited this mailing from being saved:</h3>
  
  <ul>
    <% @mailing.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row pb-2">
  <label for="committee" class="col-form-label col-auto pt-0">Committee: </label>
  <div class="col-sm-3">
    <%= f.select :committee, @committees, class: "form-control" %>
  </div>
</div>
<div class="row pb-2">
  <label for="subject" class="col-form-label col-auto">Subject: </label>
  <div class="col-sm-4">
    <%= f.text_field :subject, size: 30, class: "form-control col-sm-3" %>
  </div>
</div>
<div class="row pb-2">
  <label for="subject" class="col-form-label col-auto">Reply to: </label>
  <div class="col-sm-3">
    <%= f.text_field :replyto, size: 30, class: "form-control" %>
  </div>
</div>
<div class="row ms-3 pb-2">
  <%= f.rich_text_area :content %>
</div>
