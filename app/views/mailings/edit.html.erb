<h2>Edit Mailing</h2>

<%= form_with model: @mailing, method: "patch" do |f| %>
  <%= render partial: "form", locals: { f: f } %>

  <div class="row mt-3">
    <div class="col-sm-3">
      <%= f.submit "Update", class: "btn btn-primary", data: {disable_with: false} %> | <%= link_to 'Back', mailing_path(@mailing) %>
    </div>
  </div>
<% end %>
