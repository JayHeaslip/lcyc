<h2>Edit Mailing</h2>

<%= form_with model: @mailing, method: "patch", html: {multipart: true} do |f| %>
  <%= render partial: "form", locals: { f: f } %>

  <hr>
  <h5>Attachments</h5>
  <div class="attachment_fields">
    <% @mailing.pdfs.each do |p| %>
      <p><%= p.filename %></p>
    <% end %>
    <p>Note: mulitple files can be selected, selections will replace any existing attachments.</p>
    <%= f.file_field :pdfs, multiple: true %>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      <%= f.submit "Update", class: "btn btn-primary", data: {disable_with: false} %> | <%= link_to 'Back', mailing_path(@mailing) %>
    </div>
  </div>
<% end %>
