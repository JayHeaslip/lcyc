<h2>New Billing Mailing</h2>

<%= form_for @mailing, url: create_billing_mailings_path, html: {multipart: true}  do |f| %>
<%= render partial: "billing_form", locals: { f: f } %>

<h4>Attachments</h4>
<hr>
<div class="attachment_fields">
  <%= f.fields_for :attachments do |f| %>
  <%= render 'attachment', f: f %>
  <% end %>
</div>

<%= link_to_add_attachment('Add attachment', f, :attachments, class: 'btn btn-primary mb-3') %>

<div class="form-group row mt-3">
  <div class="col-sm-3">
    <button type="submit" class="btn btn-primary">Create</button> | <%= link_to 'Back', root_path %>
  </div>
</div>
<% end %>
