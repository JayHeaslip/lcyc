<div class="initiation_installment">
  <div class="form-row">
    <div class="form-group col-sm-2">
      <span class="has-float-label">
	<%= f.number_field :amount, id: :amount, class: "form-control", placeholder: " " %>
	<label for="amount">Amount:</label>
      </span>
    </div>
    <div class="form-group col-sm-2">
      <span class="has-float-label">
	<%= f.number_field :year, id: :year, class: "form-control", placeholder: " " %>
	<label for="year">Year:</label>
      </span>
    </div>
    <%= f.hidden_field :_destroy %>
    <%= link_to 'Delete Installment', '#', class: 'remove_initiation_installment col-offset-6' %>
  </div>
</div>
