<h2>Associate boat with membership</h2>
<%= form_for :membership, url: save_association_membership_path do |f| %>
<div class="form-row">
  <p><b>Membership: </b><%= @membership.MailingName %></p>
</div>
<div class="form-row">
  <label for="Boats" class="col-form-label pt-0">Boats:</label>
  <div class="col-sm-2">
    <%= f.collection_select(:boats, @boats, :id, :selection_string, class: "form-control") %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-3 pt-3">
    <button type="submit" class="btn btn-primary">Associate</button> | <%= link_to 'Back', back_link(1) %>
  </div>
</div>
<% end %>
