<h2>New Dry Sail Assignment</h2>

<%= form_tag('/memberships/assign_drysail', method: :post) do %>
<div class="form-row">
  <div class="form-group col-sm-4">
    <label for="Membership" class="col-form-label pt-0">Membership:</label>
    <div class="col-sm-4">
      <%= select_tag :membership, options_from_collection_for_select(@memberships, :id, :MailingName) %>
    </div>
  </div>
  <div class="form-group col-sm-3">
    <label for="date" class="col-form-label pt-0">Dry sail number:</label>
    <div class="col-sm-2">
      <%= select_tag :drysail_num, options_for_select(@available_dry_sail) %>
    </div>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-3 pt-3">
    <button type="submit" class="btn btn-primary">Assign</button>
  </div>
</div>
<% end %>
