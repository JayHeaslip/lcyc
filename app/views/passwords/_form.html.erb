<div class="row mb-2" >
  <%= form.label :password, class: "col-sm-2" %>
  <%= form.password_field :password, required: true, class: "col-sm-3" %>
</div>
<div class="row mb-2" >
  <%= form.label :password_confirmation, class: "col-sm-2" %>
  <%= form.password_field :password_confirmation, required: true, class: "col-sm-3" %>
</div>
<%= form.submit "Update Password", class: "btn btn-primary btn-block mt-2" %>
