<p class="mt-3">Total members: <%= @people.length %></p>
<table class="table table-sm table-striped">
  <thead class="thead-light">
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Home Phone</th>
      <th>Work Phone</th>
      <th>Cell Phone</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |p| %>
    <tr scope="row" %>
      <td><%= p.LastName %></td>
      <td><%= p.FirstName %></td>
      <td><%= p.HomePhone %></td>
      <td><%= p.WorkPhone %></td>
      <td><%= p.CellPhone %></td>
      <td><%= p.EmailAddress %></td>
    </tr>
    <% end %>
  </tbody>
</table>
