<%= form_for @user do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:</h2>
  
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
    
<div class="form-group row">
  <label for="firstname" class="col-form-label col-sm-2">First Name</label>
  <div class="col-sm-10">
    <%= f.text_field :firstname, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="lastname" class="col-form-label col-sm-2">Last Name</label>
  <div class="col-sm-10">
    <%= f.text_field :lastname, size: 20, class: "form-control" %>
  </div>
</div>
<% if new || (current_user && current_user.role?('Admin')) %>
<div class="form-group row">
  <label for="email" class="col-form-label col-sm-2">Email</label>
  <div class="col-sm-10">
    <%= f.email_field :email, size: 40, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="password" class="col-form-label col-sm-2">Password</label>
  <div class="col-sm-10">
    <%= f.password_field :password, value: nil, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="password_confirmation" class="col-form-label col-sm-2">Confirm Password</label>
  <div class="col-sm-10">
    <%= f.password_field :password_confirmation, value: nil, class: "form-control" %>
  </div>
</div>
<% end %>
<% if current_user && current_user.role?('Admin') %>
<div class="form-group row">
  <label class="col-form-label col-sm-2 pt-0">Role</label>
  <div class="col-sm-10">
    <% for role in Role.order(:name) %>
    <div class="form-check">
      <%= check_box_tag "role_ids[]", role.id, user.roles.include?(role), class: "form-check-input" %>
      <label class="form-check-label"><%= role.name %></label>
    </div>
    <% end %>
  </div>
</div>  
<% end %>
<div class="form-group row">
  <div class="offset-sm-2 col-sm-10">
    <button type="submit"class="btn btn-primary"><%= button %></button>
  </div>
</div>
<% end %>
  
