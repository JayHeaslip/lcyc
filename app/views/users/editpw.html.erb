<%= form_tag action: :updatepw, id: @user do %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:</h2>
  
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
    
<div class="form-group row">
  <label for="password" class="col-form-label col-sm-2">Current Password</label>
  <div class="col-sm-10">
    <%= password_field_tag :old_password, nil, class: "form-control", autocomplete: "nope" %>
  </div>
</div>
<div class="form-group row">
  <label for="password" class="col-form-label col-sm-2">New Password</label>
  <div class="col-sm-10">
    <%= password_field_tag :password, nil, class: "form-control", autocomplete: "nope" %>
  </div>
</div>
<div class="form-group row">
  <label for="password_confirmation" class="col-form-label col-sm-2">Confirm Password</label>
  <div class="col-sm-10">
    <%= password_field_tag :password_confirmation, nil, class: "form-control", autocomplete: "nope" %>
  </div>
</div>
<div class="form-group row">
  <div class="offset-sm-2 col-sm-10">
    <button type="submit"class="btn btn-primary">Update</button>
  </div>
</div>
<% end %>
  
