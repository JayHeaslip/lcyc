<h2>New Wait List Entry</h2>

<%= form_with model: @wait_list_entry do |f| %>
  <div class="row">
    <label for="Membership" class="col-form-label-sm col-sm-2 pt-2">Membership:</label>
    <div class="col-sm-4">
      <%= f.collection_select :membership_id, @memberships, :id, :MailingName, class: "col-sm-3 form-control" %>
    </div>
  </div>
  <%= render partial: "form", locals: {f: f, button: "Create"} %>
<% end %>

