<h2>New Wait List Entry</h2>

<%= form_for @wait_list_entry do |f| %>
<div class="form-row">
  <div class="form-group col-sm-3">
    <label for="Membership" class="col-form-label pt-0">Membership:</label>
    <div class="col-sm-2">
      <%= f.collection_select :membership_id, @memberships, :id, :MailingName, class: "form-control" %>
    </div>
  </div>
  <div class="form-group col-sm-3">
    <label for="date" class="col-form-label pt-0">Wait list date:</label>
    <div class="">
      <%= f.date_select :date, include_blank: true, order: [:month, :day, :year], start_year: 1960, end_year: 1+Time.now.year, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="form-group ml-4 col-sm-3">
    <div class="form-row form-check mr-4 pb-2">
      <%= check_box_tag :force_wld, :force_wld, @force_wld, class: "form-check-input" %>
      <label for="html" class="form-check-label">Force wait list date</label>
</div>
    
  </div>
  <p>Note: For Active, Senior and Associate members the wait list date will normally be set to the active date; for Accepted members the wait list date will normally be set to the approval date.  This can be overridden to be set to the date above by selecting the checkbox.
  </p>
</div>
<div class="form-group row">
  <div class="col-sm-3 pt-3">
    <button type="submit" class="btn btn-primary">Create</button> | <%= link_to 'Back', wait_list_entries_path %>
  </div>
</div>
<% end %>

